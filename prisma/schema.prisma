generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  year        Int
  difficulty  String
  fields      Json     @default("[]")
  frameworks  Json     @default("[]")
  libraries   Json     @default("[]")
  languages   Json     @default("[]")
  description String
  link        Json?
  image       String?
  featured    Boolean  @default(false)
  ongoing     Boolean  @default(false)
  owner       String?
  repo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  platforms   Json     @default("[]")

  @@index([year])
  @@index([featured, ongoing])
}
